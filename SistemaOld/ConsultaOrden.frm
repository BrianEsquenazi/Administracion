Private Sub Proceso_Click()

    Call Limpia_Vector
    
    Renglon = 0
    spOrden = "ListaOrden " + "'" + Orden.Text + "'"
    Set rstOrden = db.OpenRecordset(spOrden, dbOpenSnapshot, dbSQLPassThrough)
    If rstOrden.RecordCount > 0 Then
        With rstOrden
            .MoveFirst
            Do
                If .EOF = False Then
                
                    Renglon = Renglon + 1
                    
                    WVector1.TextMatrix(Renglon, 1) = rstOrden!Articulo
                    WVector1.TextMatrix(Renglon, 3) = Pusing("###,###.##", rstOrden!Cantidad)
                    WVector1.TextMatrix(Renglon, 4) = Pusing("###,###.##", rstOrden!Precio)
                    WVector1.TextMatrix(Renglon, 5) = rstOrden!Fecha1
                    WVector1.TextMatrix(Renglon, 6) = rstOrden!Fecha2
                    WVector1.TextMatrix(Renglon, 7) = rstOrden!Condicion
                    
                    .MoveNext
                        Else
                    Exit Do
                End If
            Loop
        End With
        rstOrden.Close
    End If
    
    WRenglon = Renglon
    Renglon = 0
    
    For da = 1 To WRenglon
        Auxi1 = WVector1.TextMatrix(da, 1)
        spArticulo = "ConsultaArticulo " + "'" + Auxi1 + "'"
        Set rstArticulo = db.OpenRecordset(spArticulo, dbOpenSnapshot, dbSQLPassThrough)
        If rstArticulo.RecordCount > 0 Then
            WVector1.TextMatrix(da, 2) = rstArticulo!Descripcion
            rstArticulo.Close
        End If
    Next da
    
    WVector1.TopRow = 1
    WVector1.Col = 1
    WVector1.Row = 1

End Sub




