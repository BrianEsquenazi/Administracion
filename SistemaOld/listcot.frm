Private Sub Acepta_Click()

    Listado.WindowTitle = "Listado de Cotizaciones"
    Listado.WindowTop = 0
    Listado.WindowLeft = 0
    Listado.WindowWidth = Screen.Width
    Listado.WindowHeight = Screen.Height
    
    Listado.GroupSelectionFormula = "{Cotiza.Cotiza} in " + Desde.Text + " to " + Hasta.Text
   
    If Impresora.Value = True Then
        Listado.Destination = 1
            Else
        Listado.Destination = 0
    End If
    
    DbConnect = db.Connect
    DSQ = getDatabase(DbConnect)
    
    Listado.SQLQuery = "SELECT Cotiza.Cotiza, Cotiza.Fecha, Cotiza.Proveedor, Cotiza.Articulo, Cotiza.Precio, Cotiza.Condicion, Cotiza.Observaciones, Cotiza.Moneda, " _
                        + "Articulo.Descripcion, " _
                        + "Proveedor.Nombre " _
                        + "From " _
                        + DSQ + ".dbo.Cotiza Cotiza, " _
                        + DSQ + ".dbo.Articulo Articulo, " _
                        + DSQ + ".dbo.Proveedor Proveedor " _
                        + "Where " _
                        + "Cotiza.Articulo = Articulo.Codigo AND " _
                        + "Cotiza.Proveedor = Proveedor.Proveedor AND " _
                        + "Cotiza.Cotiza >= " + Desde.Text + " And Cotiza.Cotiza <= " + Hasta.Text

    
    Listado.DataFiles(3) = WEmpresa + "auxi.mdb"
    Listado.Connect = Connect()
    
    Listado.Action = 1
    
End Sub

