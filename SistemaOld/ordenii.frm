    strConnect = "odbc;dsn=" & txtOdbc & ";uid=" & txtUserName & ";pwd=" & txtPassword & ";app=" & gAplicacion
    Set db = DBEngine.Workspaces(0).OpenDatabase("", False, False, strConnect)
    
    Proveedor.Text = WProveedorOrden
    DesProveedor.Caption = WDesProveedorOrden

    Lugar = 0

    ZSql = ""
    ZSql = ZSql + "Select *, Articulo.Descripcion as [WDesArticulo]"
    ZSql = ZSql + " FROM Orden, Articulo"
    ZSql = ZSql + " Where Orden.Articulo = Articulo.Codigo"
    ZSql = ZSql + " and Orden.Proveedor = " + "'" + WProveedorOrden + "'"
    ZSql = ZSql + " and Orden.Saldo <> 0 "
    ZSql = ZSql + " and Orden.Orden >= 900000"
    ZSql = ZSql + " Order by Orden.Articulo, Orden.Orden"
    spOrden = ZSql
    Set rstOrden = db.OpenRecordset(spOrden, dbOpenSnapshot, dbSQLPassThrough)
    If rstOrden.RecordCount > 0 Then
        With rstOrden
    
            .MoveFirst
            If .NoMatch = False Then
            
                Do
                
                    Lugar = Lugar + 1
                    
                    WVector1.TextMatrix(Lugar, 1) = Str$(rstOrden!Orden - 900000)
                    WVector1.TextMatrix(Lugar, 2) = rstOrden!Fecha
                    WVector1.TextMatrix(Lugar, 3) = rstOrden!Articulo
                    WVector1.TextMatrix(Lugar, 4) = rstOrden!WDesArticulo
                    WVector1.TextMatrix(Lugar, 5) = Str$(rstOrden!Saldo)
                    WVector1.TextMatrix(Lugar, 6) = ""
                    WVector1.TextMatrix(Lugar, 7) = Str$(rstOrden!Saldo)
                    WVector1.TextMatrix(Lugar, 8) = rstOrden!Fecha1
                    
                    WClaveOrden(Lugar) = rstOrden!Clave
                
                    .MoveNext
                
                    If .EOF = True Then
                        Exit Do
                    End If
                
                Loop
            End If
        
        End With
        
        rstOrden.Close
    
    End If
    
    Call Conecta_Empresa
    
    WVector1.Row = 1
